config wifi-device 'radio0'
        option type 'mac80211'
        option vendor 'ralink'
        option hwmode '11g'
        option htmode 'HT40'
        option channel 'auto'
        option phyname 'mt7620'

config wifi-iface 'wlan0'
        option device 'radio0'
        option network 'lan'
        option mode 'ap'
        option ssid 'OrayBox-E624'
        option encryption 'none'
        option ifname 'ra0'