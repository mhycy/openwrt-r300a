config zerotier
    # 开关
    option zt_enabled 1

    # 配置模式
    # init -- UCI 配置只用于初始化
    # rewrite -- 每次启动都使用 UCI 配置覆盖文件（会删除原始目录）
    option config_mode 'init'

    # local.conf 配置
    # 如果 local_conf 配置为 true 则用 local_conf_content 覆盖目录下的 local.conf 文件
    option lcoal_conf 1
    option local_conf_content '{"settings":{"defaultBondingPolicy":"balance-aware","policies":{"balance-aware":{"basePolicy":"balance-aware","links":{"wan":{"alloc":0.25},"wwan":{"alloc":0.75}}}}}}'

# 网络配置信息
config network
    # 网络是否可用
    option network_enabled 1

    # 网络 ID
    option id 'b2669b77dffbe020'

    # 定义接口名字, 写入到 /<config-root>/devicemap
    option ifname 'zt0'

    # 是否开启 NAT 模式, 会影响防火墙行为
    option nat 1

    # 以下参数写入到 <config-root>/networks.d/<network-id>.local.conf 配置文件
    option allow_managed 1
    option allow_global 0
    option allow_default 0
    option allow_dns 0